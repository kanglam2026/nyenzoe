---
import Layout from '../layouts/Layout.astro';

const res = await fetch("http://localhost:1337/api/articles?populate=Category");
const json = await res.json();
const articles = json.data || [];
---

<Layout>
  <section class="py-16 bg-gray-50 ">
    <h1 class="text-4xl">Articles from Strapi</h1>
    
    <div class="content w-screen-xl mx-auto">
      <div class="grid  gap-5 grid-cols-3">
        {articles.map((article) => {
          const attrs = article.attributes || article;
          const category = attrs.Category?.data?.attributes;
    
          return (
            <div class="bg-white p-10 mb-4  border-2 border-slate-100 rounded-4xl shadow-2xl ">
              <h2 class="text-2xl font-bold p-2">{attrs.Title || "No title"}</h2>
              <p>{attrs.Content || "No content"}</p>
    
              {category && (
                <p class="text-sm text-gray-600">
                  Category: {category.Name}
                </p>
              )}
            </div>
          );
        })}
      </div>
    </div>

  </section>
</Layout>
