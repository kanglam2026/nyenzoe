---
export interface Props {
  title: string;
  author: string;
  icon: string;
  rating: number;
  category?: string;
  buttonText?: string;
}

const {
  title,
  author,
  icon,
  rating,
  category,
  buttonText = 'Install',
} = Astro.props;
---

<div class=" rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300  bg-white p-3">
  <div class="grid items-center just-fy-center">
    <div class="w-full h-36 bg-gray-200 rounded-lg flex items-center justify-center">
      <img src={icon} alt={title} class="w-full h-36 rounded-lg object-cover" />
    </div>
    <div class="flex-1">
      <h3 class="font-semibold text-gray-900">{title}</h3>
      <p class="text-sm text-gray-600">{author}</p>
      {category && <p class="text-xs text-blue-600">{category}</p>}
      <div class="flex items-center mt-1">
        <div class="flex text-yellow-400">
          {Array.from({length: 5}).map((_, i) => (
            <svg key={i} class={`w-3 h-3 ${i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <span class="ml-1 text-xs text-gray-600 pb-2">{rating}</span>
      </div>
    </div>
    <div class="rounded-md flex justify-center bg-blue-600">
      <button class=" hover:text-blue-300 text-sm font-medium px-3 text-white py-1">{buttonText}</button>
    </div>
  </div>
</div>


