---
export interface Props {
  title: string;
  author: string;
  icon: string;
  rating: number;
  downloads: string;
  buttonText?: string;
  buttonAction?: string;
  showRating?: boolean;
  showDownloads?: boolean;
  showButton?: boolean;
}

const {
  title,
  author,
  icon,
  rating,
  downloads,
  buttonText = "Install",
  buttonAction = "#",
  showRating = true,
  showDownloads = true,
  showButton = true
} = Astro.props;
---

<div class=" rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 p-4 ">
  <div class="flex items-center">
    <div class="w-20 h-20 bg-gray-200 rounded-lg flex items-center justify-center mr-4">
      <img src={icon} alt={title} class="w-20 h-20 rounded-lg object-cover" />
    </div>
    <div class="flex-1">
      <h3 class="font-semibold text-gray-900">{title}</h3>
      <p class="text-sm text-gray-600">{author}</p>
      {showRating && (
        <div class="flex items-center mt-1">
          <div class="flex text-yellow-400">
            {Array.from({length: 5}).map((_, i) => (
              <svg key={i} class={`w-3 h-3 ${i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <span class="ml-1 text-xs text-gray-600">{rating}</span>
        </div>
      )}
    </div>
    <div class="text-right">
      {showDownloads && (
        <span class="text-xs text-gray-500">{downloads}</span>
      )}
      {showButton && (
        <button class="block mt-1 text-blue-600 hover:text-blue-700 text-sm font-medium">{buttonText}</button>
      )}
    </div>
  </div>
</div>
