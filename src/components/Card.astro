---
import Popup from './Popup.astro';

export interface Props {
  title: string;
  author: string;
  icon: string;
  rating: number;
  downloads: string;
  buttonText?: string;
  buttonAction?: string;
  showRating?: boolean;
  showDownloads?: boolean;
  showButton?: boolean;
}

const {
  title,
  author,
  icon,
  rating,
  downloads,
  buttonText = "Install",
  buttonAction = "#",
  showRating = true,
  showDownloads = true,
  showButton = true
} = Astro.props;
---

<div class=" rounded-xl shadow-lg inset-shadow-2xs hover:shadow-md transition-shadow duration-300 p-4 bg-gradient-to-b from-blue-950/20 to-blue-900 hover:to-blue-800 border-2 border-blue-900 hover:border-blue-800" data-card>
  <div class="flex items-center">
    <div class="w-20 h-20  rounded-lg flex items-center justify-center mr-4">
      <img src={icon} alt={title} class="w-20 h-20 rounded-lg object-cover" />
    </div>
    <div class="flex-1">
      <h3 class="font-semibold text-blue-100">{title}</h3>
      <p class="text-sm text-blue-300">{author}</p>
      {showRating && (
        <div class="flex items-center mt-1">
          <div class="flex text-yellow-400">
            {Array.from({length: 5}).map((_, i) => (
              <svg class={`w-3 h-3 ${i < Math.floor(rating) ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            ))}
          </div>
          <span class="ml-1 text-xs text-blue-300">{rating}</span>
        </div>
      )}
    </div>
    <div class="text-right">
      {showDownloads && (
        <span class="text-xs text-blue-300">{downloads}</span>
      )}
      {showButton && (
        <button class="block mt-1 text-green-400 hover:text-green-700 text-sm font-medium open-popup">{buttonText}</button>
      )}
    </div>
  </div>
  <div class="hidden" data-popup-root>
    
    <Popup open={true} title={title}>
      <div class="flex justify-center">
        <img src={icon} alt="" class="rounded-3xl w-20 h-20">
      </div>
      <div class="space-y-2">
       <div class="py-5 ">
        <h3 class="text-xl font-semibold text-gray-900 text-center py-4">{title}</h3>
        <p class="text-sm text-gray-700 text-center">Install {title} by {author}?</p>
       </div>

        
        <div class="flex justify-center gap-2 pt-2">
          <a href={buttonAction} class="rounded-md bg-blue-600 px-3 py-2 text-white hover:bg-blue-700 flex">
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M13 11.15V4a1 1 0 1 0-2 0v7.15L8.78 8.374a1 1 0 1 0-1.56 1.25l4 5a1 1 0 0 0 1.56 0l4-5a1 1 0 1 0-1.56-1.25L13 11.15Z" clip-rule="evenodd"/>
              <path fill-rule="evenodd" d="M9.657 15.874 7.358 13H5a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-4a2 2 0 0 0-2-2h-2.358l-2.3 2.874a3 3 0 0 1-4.685 0ZM17 16a1 1 0 1 0 0 2h.01a1 1 0 1 0 0-2H17Z" clip-rule="evenodd"/>
            </svg>
            
            Confirm</a>
        </div>
      </div>
    </Popup>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('[data-card]').forEach((card) => {
      const root = card.querySelector('[data-popup-root]');
      const btn = card.querySelector('.open-popup');
      if (!root || !btn) return;
      btn.addEventListener('click', () => {
        root.classList.remove('hidden');
      });
      root.addEventListener('popup:close', () => {
        root.classList.add('hidden');
      });
    });
  });
</script>
